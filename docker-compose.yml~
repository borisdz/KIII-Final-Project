version: '3'

services:
  postgres:
    image: postgres:latest
    restart: always
    container_name: e-shop
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: b17i19
      POSTGRES_DB: e-shop
    ports:
      - "5433:5432"
    volumes:
      - eshop-sql:/var/lib/postgresql/data
    networks:
      - eshop-network

  spring-boot-app:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5433/e-shop
      SPRING_DATASOURCE_USERNAME: postgres
      SPRING_DATASOURCE_PASSWORD: b17i19
      SPRING_JPA_HIBERNATE_DDL_AUTO: update
      SPRING_JPA_SHOW_SQL: true
    depends_on:
      - postgres
    ports:
      - "9090:9090"
    networks:
      - eshop-network
volumes:
  eshop-sql:

networks:
  eshop-network:
    driver: bridge
